# ── Project ───────────────────────────────────────────────────
COMPOSE_PROJECT_NAME=pixelism

# ── Database (Supabase / PostgreSQL) ──────────────────────────
# DB_USER format for Supabase pooler: postgres.<project-ref>
DB_HOST=
DB_PORT=6543
DB_NAME=
DB_USER=
DB_PASSWORD=

# ── Redis ─────────────────────────────────────────────────────
REDIS_PASSWORD=

# ── JWT ───────────────────────────────────────────────────────
JWT_SECRET=
JWT_ACCESS_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=604800000

# ── OTP ───────────────────────────────────────────────────────
OTP_EXPIRATION=300
OTP_LENGTH=6

# ── Mail ──────────────────────────────────────────────────────
MAIL_USERNAME=
MAIL_PASSWORD=

# ── OAuth2 ────────────────────────────────────────────────────
CLIENT_ID_GOOGLE=
CLIENT_SECRET_GOOGLE=
CLIENT_ID_GITHUB=
CLIENT_SECRET_GITHUB=

# ── Cloudinary ────────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ── URLs (prod: thay localhost bằng domain/IP thực) ───────────
FRONTEND_REDIRECT_URI=http://localhost:3000
OAUTH2_REDIRECT_BASE_URI=http://localhost:8080
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_BACKEND_URL=http://localhost:8080